<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 눌렸을 때 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFF8F3" /> <!-- 같은 배경 유지 -->
            <stroke android:width="1dp" android:color="#D88A6C" /> <!-- 더 강조된 테두리 -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape>
            <solid android:color="#FFF8F3" /> <!-- 연한 살구 배경 -->
            <stroke android:width="1dp" android:color="#E8A98D" /> <!-- 메인 테두리 강조 -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
