<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- 지역 행사 텍스트 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지역 행사"
            android:textSize="18sp"
            android:layout_marginTop="60dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 행사 배너 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/sample_banner"
            android:layout_marginBottom="10dp" />

        <!-- 날씨 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card_rounded"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day_of_the_week"
                android:text="TUESDAY"
                android:textSize="18sp"
                android:textColor="#00B8D4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temperature"
                android:layout_weight="1"
                android:gravity="end"
                android:text="19℃"
                android:textSize="18sp"
                android:textColor="#00B8D4"
                android:layout_marginHorizontal="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fine_dust"
                android:text="미세먼지"
                android:textSize="18sp"
                android:textColor="#00B8D4"
                android:layout_marginHorizontal="12dp" />

            <ImageView
                android:id="@+id/ic_weather"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_weather_sun" />
        </LinearLayout>

        <!-- 게시판 카드 -->
        <LinearLayout
            android:id="@+id/boardCard"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_card_rounded"
            android:layout_marginBottom="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/sample_board"
                android:contentDescription="게시판"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시판"
                android:textSize="16sp"
                android:textColor="#222222" />
        </LinearLayout>

        <!-- 지도 & 내 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="2">

            <!-- 지도 -->

<!--            니중에 ImageView 삭제 후 미니맵으로 변경-->
<!--            <com.naver.maps.map.MapView-->

            <ImageView
                android:id="@+id/mini_map_view"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:src="@drawable/sample_map" />

            <!-- 내 정보 -->
            <LinearLayout
                android:id="@+id/profileCard"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_card_rounded">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="내 정보" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 정보 확인"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
