<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 지역 행사 타이틀 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="지역 행사"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ic_arrow_right"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="더보기" />
        </LinearLayout>

        <!-- 행사 배너 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/sample_banner"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_card_rounded"
            android:layout_marginBottom="24dp" />

        <!-- 날씨 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#DDF5FF"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TUESDAY"
                android:textSize="18sp"
                android:textColor="#00B8D4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19℃"
                android:textSize="18sp"
                android:textColor="#00B8D4"
                android:layout_marginHorizontal="12dp" />

            <ImageView
                android:id="@+id/ic_weather_sun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_weather_sun"
                android:contentDescription="날씨 아이콘" />
        </LinearLayout>

        <!-- 게시판 블록 (이미지 유지) -->
        <LinearLayout
            android:id="@+id/boardCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#DDF5FF"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sample_board"
                android:contentDescription="게시판"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시판"
                android:textSize="16sp"
                android:textColor="#222222"/>
        </LinearLayout>

        <!-- 지도 + 내정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp"
            android:divider="@android:color/transparent"
            android:showDividers="middle"
            android:dividerPadding="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/sample_map"
                android:scaleType="centerCrop"
                android:background="#DDF5FF" />

            <LinearLayout
                android:id="@+id/profileCard"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#DDF5FF"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="내 정보" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 정보 확인"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
